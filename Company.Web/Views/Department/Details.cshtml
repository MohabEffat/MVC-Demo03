@model DepartmentDto
@{
    ViewData["Title"] = "Department Details";
}
<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="card p-4">
    <form asp-action="Update" asp-route-id="@Model.Id">
        <div class="mb-3">
            <label asp-for="Code" class="form-label"></label>
            <input type="text" asp-for="Code" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input type="text" asp-for="Name" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="CreateAt" class="form-label"></label>
            <input asp-for="CreateAt" class="form-control" readonly />
        </div>

        <div class="mt-4">
            <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary me-2">Update</a>
            <a asp-action="Index" class="btn btn-secondary">Back To List</a>
        </div>
    </form>
</div>
