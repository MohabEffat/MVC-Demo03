@model IEnumerable<DepartmentDto>

@{
    ViewData["Title"] = "Departments";
}

<!-- Create New Department Button -->
<a asp-controller="Department" asp-action="Create" class="btn btn-primary mb-3">
    <i class="bi bi-plus-lg"></i> Create New Department
</a>

@if (Model.Count() > 0)
{
    <!-- Responsive Table -->
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(D => D.Code)</th>
                    <th>@Html.DisplayNameFor(D => D.Name)</th>
                    <th>@Html.DisplayNameFor(D => D.CreateAt)</th>
                    <th>Details</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var department in Model)
                {
                    <tr>
                        <td>@department.Code</td>
                        <td>@department.Name</td>
                        <td>@department.CreateAt.ToString("dd MMM yyyy")</td>
                        <partial name="_ActionbuttonsPartialView" model="department.Id.ToString()" />
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <!-- No Departments Found Alert -->
    <div class="mt-5 alert alert-warning text-center">
        <h3><i class="bi bi-exclamation-triangle"></i> There are no Departments</h3>
    </div>
}
