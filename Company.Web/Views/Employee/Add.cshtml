@model EmployeeDto

@{
    ViewData["Title"] = "Index";
}
<h1>Add New Employee</h1>
<br />
<br />

@{
    var depts = new SelectList(ViewBag.departments, "Id", "Name");
}
<form asp-action="Add" enctype="multipart/form-data">
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Address"></label>
        <input type="text" asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Age"></label>
        <input type="number" asp-for="Age" class="form-control" />
    </div>

        <div class="form-group">
        <label class="col-form-label" asp-for="Email"></label>
        <input type="email" asp-for="Email" class="form-control" />
    </div>
        <div class="form-group">
        <label class="col-form-label" asp-for="Salary"></label>
        <input type="number" asp-for="Salary" class="form-control" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="PhoneNumber"></label>
        <input type="text" asp-for="PhoneNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Department"></label>
        <select class="form-control" asp-items="@depts" asp-for="DepartmentId">
            <option value="@null">--Select Department--</option>
        </select>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Image">Image</label>
        <br />
        <input type="file" class="form-control-file" asp-for="Image" />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="HiringDate"></label>
        <input type="date" asp-for="HiringDate" class="form-control" />
        <br />
    </div>

    <input type="submit" value="Add" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>
